<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <bool name="light_theme">true</bool>
    <bool name="dark_theme">false</bool>

    <style name="Theme.Bilimiao" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="themeName">@string/app_name</item>
        <item name="isLightTheme">@bool/light_theme</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryVariant">@color/theme_color_primary_dark</item>
        <item name="colorOnPrimary">@color/theme_color_primary_trans</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_color_secondary</item>
        <item name="colorSecondaryVariant">@color/theme_color_secondary</item>
        <item name="colorSecondaryContainer">@color/m3_secondary_container_color</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="m">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="blockBackground">@color/blockBackgroundColor</item>
        <item name="foregroundColor">@color/foregroundColor</item>
        <item name="lineColor">@color/lineColor</item>
        <item name="defaultBackgroundColor">@color/windowBackgroundColor</item>

        <item name="android:windowBackground">@drawable/splash_default</item>

        <item name="navigationViewStyle">@style/Widget.Bilimaio.Material3.NavigationView</item>
    </style>

    <style name="Theme.DayNight.Bilimiao" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="themeName">@string/app_name</item>
        <item name="isLightTheme">@bool/dark_theme</item>
        <item name="colorPrimary">@color/theme_color_primary</item>
        <item name="colorPrimaryVariant">@color/theme_color_primary_dark</item>
        <item name="colorOnPrimary">@color/theme_color_primary_trans</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_color_secondary</item>
        <item name="colorSecondaryVariant">@color/theme_color_secondary</item>
        <item name="colorSecondaryContainer">@color/m3_secondary_container_color</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/black</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>

        <item name="blockBackground">@color/darkBlockBackgroundColor</item>
        <item name="foregroundColor">@color/darkForegroundColor</item>
        <item name="lineColor">@color/darkLineColor</item>
        <item name="defaultBackgroundColor">@color/darkWindowBackgroundColor</item>

        <item name="android:windowBackground">@drawable/splash_default</item>

        <item name="navigationViewStyle">@style/Widget.Bilimaio.Material3.NavigationView</item>
    </style>


    <!--透明activity-->
    <style name="Theme.TranslucentTheme" parent="Theme.Bilimiao">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="ThemeOverlay_Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <!-- color used by navigation icon and overflow icon -->
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSurface">@color/white</item>
    </style>


</resources>